URxvt*font: xft:IBM Plex Mono:size=8, \
    xft:xft:DejaVu Sans Mono:style=Book:antialias=false:size=8, \
            xft:xft:unifont:style=Medium:antialias=false
URxvt.letterSpace:-1
URxvt.scrollBar: false
URxvt.cursorBlink: true
URxvt.perl-ext: default,matcher
URxvt.matcher.button: 1
URxvt.visualBell: false
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.geometry:             120x30
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0
URxvt.scrollStyle:          rxvt
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false
URxvt.pointerBlank:         true
URxvt.urlLauncher:          /usr/bin/xdg-open

! ------------------------------------------------------------------------------
rofi.font:dina 18
! Basic configuration
rofi.width:           40
rofi.padding:         10

! Enable the extended coloring options
rofi.color-enabled:   true

! Property Name       BG       Border   Separator
rofi.color-window:    #18181a, #18181a, #282c34

! Property Name       BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:    #18181a, #abb2bf, #18181a, #18181a, #81a2be
rofi.color-active:    #18181a, #61afef, #18181a, #18181a, #b5bd68
rofi.color-urgent:    #18181a, #e06c75, #18181a, #18181a, #cc6666

! Set the desired separator style
rofi.separator-style: solid
Xft.dpi: 220
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
